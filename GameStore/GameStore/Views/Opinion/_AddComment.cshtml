@model GameStore.ViewModels.AddCommentViewModel

@using (Html.BeginForm("AddComment", "Opinion", FormMethod.Post, new { @class = "general-form", role = "form", @id = "add-comment" }))
{
    <h3>Dodaj komentarz</h3>

    @Html.HiddenFor(m => m.ProductId)
    @Html.HiddenFor(m => m.UserId)

    <div class="form-group">
        @Html.TextBoxFor(model => model.Title, htmlAttributes: new { @class = "form-input", placeholder = "Tytuł komentarza" })
    </div>
    <div class="form-group">
        @Html.TextAreaFor(model => model.Content, htmlAttributes: new { @class = "form-input", placeholder = "Treść komentarza" })
    </div>

    <div class="form-group">
        <button class="form-input" type="submit">Dodaj komentarz</button>
    </div>
}