@model IEnumerable<GameStore.ViewModels.GenreViewModel>

@{
    ViewBag.Title = "Gatunki gier";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Dodaj nowy gatunek gry", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Gatunki
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Update", new { id = item.Id })
        </td>
        <td>
            @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
