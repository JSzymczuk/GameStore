@model GameStore.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Przypomnienie hasła";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main style="max-height: 460px;">
    <div class="wrapper">
        <div class="column" style="width: 100%;">
            @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "general-form", role = "form", style = "margin: 0 auto;" }))
            {
                @Html.AntiForgeryToken()
                <h2>@ViewBag.Title</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="form-input-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-input" })
                    </div>
                </div>

                <button class="form-input" type="submit">Wyślij link</button>
            }
        </div>
    </div>
</main>
