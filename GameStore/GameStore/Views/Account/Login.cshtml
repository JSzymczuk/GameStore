@using GameStore.Models
@model LoginViewModel
@{
    ViewBag.Title = "Logowanie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main style="max-height: 460px;">
    <div class="wrapper">
        <div class="column" style="width: 100%;">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "general-form", role = "form", style="margin: 0 auto;" }))
            {
                @Html.AntiForgeryToken()
                <h2>@ViewBag.Title</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    <div class="form-input-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-input" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <div class="form-input-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label" })
                        @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-input" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                    <div class="form-input-group">
                        @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "form-label" })
                        @Html.CheckBoxFor(model => model.RememberMe, htmlAttributes: new { @class = "form-input" })
                        <span class="check-label"></span>
                    </div>
                </div>

                <button class="form-input" type="submit">Zaloguj</button>
                <p>
                    @Html.ActionLink("Zarejestruj się", "Register")
                </p>
                <p>
                    @Html.ActionLink("Zapomniałeś hasła?", "ForgotPassword")
                </p>
            }
        </div>
    </div>
</main>
