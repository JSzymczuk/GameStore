@model GameStore.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Zmiana hasła";
}

<main style="max-height: 460px;">
    <div class="wrapper">
        <div class="column" style="width: 100%;">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "general-form", role = "form", style="margin: 0 auto;" }))
            {
                @Html.AntiForgeryToken()
                <h2>@ViewBag.Title</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="form-input-group">
                        @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "form-label" })
                        @Html.PasswordFor(model => model.OldPassword, htmlAttributes: new { @class = "form-input" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-input-group">
                        @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "form-label" })
                        @Html.PasswordFor(model => model.NewPassword, htmlAttributes: new { @class = "form-input" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-input-group">
                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "form-label" })
                        @Html.PasswordFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "form-input" })
                    </div>
                </div>
                
                <button class="form-input" type="submit">Zmień</button>
            }
        </div>
    </div>
</main>